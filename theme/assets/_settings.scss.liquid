@font-face {
  font-family: 'FontAwesome';
  src: url('{{ 'fontawesome-webfont.eot' | asset_url }}');
  src: url('{{ 'font/fontawesome-webfont.eot' | asset_url }}') format('embedded-opentype'),
  url('{{ 'fontawesome-webfont.woff' | asset_url }}') format('woff'),
  url('{{ 'font/fontawesome-webfont.ttf' | asset_url }}') format('truetype');
}

body {
  {% unless settings.site-background-color == blank %}background-color: {{ settings.site-background-color }};{% endunless %}
  font-family: {% if settings.body-font-custom != blank %}{{ settings.body-font-custom }}{% elsif settings.body-font != blank %}{{ settings.body-font }}{% endif %};
  {% unless settings.body-text-size == blank %}font-size: {{ settings.body-text-size }};{% endunless %}
  
  & a {
    {% unless settings.body-link-color == blank %}color: {{ settings.body-link-color }};{% endunless %}
    
    &:hover {
      {% unless settings.body-link-hover-color == blank %}color: {{ settings.body-link-hover-color }};{% endunless %}
    }
  }
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: {% if settings.heading-font-custom != blank %}{{ settings.heading-font-custom }}{% elsif settings.heading-font != blank %}{{ settings.heading-font }}{% endif %};
  {% unless settings.heading-case == blank %}text-transform: {{ settings.heading-case }};{% endunless %}
  {% unless settings.heading-weight == blank %}font-weight: {{ settings.heading-weight }};{% endunless %}
  {% unless settings.heading-style == blank %}font-style: {{ settings.heading-style }};{% endunless %}
  {% unless settings.heading-text-color == blank %}color: {{ settings.heading-text-color }};{% endunless %}
  
  {% unless settings.heading-letterpress == blank %}text-shadow: 1px 1px 0 #fff;{% endunless %}
  
  & a {
    {% unless settings.heading-text-color == blank %}color: {{ settings.heading-text-color }};{% endunless %}
    
    &:hover {
      {% unless settings.heading-text-color == blank %}color: darken({{ settings.heading-text-color }}, 10%);{% endunless %}
    }
  }
}

h1 {
  {% unless settings.heading-1-size == blank %}font-size: {{ settings.heading-1-size }};{% endunless %}
}

h2 {
  {% unless settings.heading-2-size == blank %}font-size: {{ settings.heading-2-size }};{% endunless %}
}

h3 {
  {% unless settings.heading-3-size == blank %}font-size: {{ settings.heading-3-size }};{% endunless %}
}

h4 {
  {% unless settings.heading-4-size == blank %}font-size: {{ settings.heading-4-size }};{% endunless %}
}

h5 {
  {% unless settings.heading-5-size == blank %}font-size: {{ settings.heading-5-size }};{% endunless %}
}

h6 {
  {% unless settings.heading-6-size == blank %}font-size: {{ settings.heading-6-size }};{% endunless %}
}

.navbar {
  font-family: {% if settings.navbar-font-custom != blank %}{{ settings.navbar-font-custom }}{% elsif settings.navbar-font != blank %}{{ settings.navbar-font }}{% endif %};
  {% unless settings.navbar-link-color == blank %}color: {{ settings.navbar-link-color }};{% endunless %}
  {% unless settings.navbar-size == blank %}font-size: {{ settings.navbar-size }};{% endunless %}
  
  & .nav li {
    & a {
      {% unless settings.navbar-link-color == blank %}color: {{ settings.navbar-link-color }};{% endunless %}
    
      &:hover {
        {% unless settings.navbar-link-hover-color == blank %}color: {{ settings.navbar-link-hover-color }};{% endunless %}
      }
    }
  }
}

.nav {
  {% unless settings.nav-case == blank %}text-transform: {{ settings.nav-case }};{% endunless %}
  {% unless settings.nav-weight == blank %}font-weight: {{ settings.nav-weight }};{% endunless %}
  {% unless settings.nav-style == blank %}font-style: {{ settings.nav-style }};{% endunless %}
}

aside {
  font-family: {% if settings.sidebar-font-custom != blank %}{{ settings.sidebar-font-custom }}{% elsif settings.sidebar-font != blank %}{{ settings.sidebar-font }}{% endif %};
  {% unless settings.sidebar-text-color == blank %}color: {{ settings.sidebar-text-color }};{% endunless %}
  {% unless settings.sidebar-size == blank %}font-size: {{ settings.sidebar-size }};{% endunless %}
}

aside .nav {
  & a {
    {% unless settings.sidebar-link-color == blank %}color: {{ settings.sidebar-link-color }};{% endunless %}
    
    &:hover {
      {% unless settings.sidebar-link-hover-color == blank %}color: {{ settings.sidebar-link-hover-color }};{% endunless %}
    }
  }
}

.navbar-fixed-bottom {
  font-family: {% if settings.footer-font-custom != blank %}{{ settings.footer-font-custom }}{% elsif settings.footer-font != blank %}{{ settings.footer-font }}{% endif %};
  {% unless settings.footer-text-color == blank %}color: {{ settings.footer-text-color }};{% endunless %}
  {% unless settings.footer-size == blank %}font-size: {{ settings.footer-size }};{% endunless %}
  
  & a {
    {% unless settings.footer-link-color == blank %}color: {{ settings.footer-link-color }};{% endunless %}
    
    &:hover {
      {% unless settings.footer-link-hover-color == blank %}color: {{ settings.footer-link-hover-color }};{% endunless %}
    }
  }
}

.carousel-caption a {
  {% unless settings.heading-case == blank %}color: darken(#fff,15%);{% endunless %}
  
  &:hover {
    {% unless settings.heading-case == blank %}color: darken(#fff,25%);{% endunless %}
  }
}