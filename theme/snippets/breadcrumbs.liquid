<ul class="breadcrumb">
  <li><a href="/"><i class="icon-home"></i></a> <span class="divider">{% include '_localize' with 'breadcrumb-separator' %}</span></li>
  {% if collection.title != blank and collection.title != page_title and template != 'index' %}<li><a href="{{ collection.url }}">{{ collection.title }}</a> <span class="divider">{% include '_localize' with 'breadcrumb-separator' %}</span></li>{% endif %}
  {% if blog.title != blank and blog.title != page_title %}<li><a href="{{ blog.url }}">{{ blog.title }}</a> <span class="divider">{% include '_localize' with 'breadcrumb-separator' %}</span></li>{% endif %}
  {% if article.title != blank and article.title != page_title %}<li><a href="{{ article.url }}">{{ article.title }}</a> <span class="divider">{% include '_localize' with 'breadcrumb-separator' %}</span></li>{% endif %}
  {% if page.title != blank and page.title != page_title %}<li><a href="{{ page.url }}">{{ page.title }}</a> <span class="divider">{% include '_localize' with 'breadcrumb-separator' %}</span></li>{% endif %}
  {% if product.title != blank and product.title != page_title %}<li><a href="{{ product.url | within: collection }}">{{ product.title }}</a> <span class="divider">{% include '_localize' with 'breadcrumb-separator' %}</span></li>{% endif %}
  <li class="active">{{ page_title }}</li>
</ul>