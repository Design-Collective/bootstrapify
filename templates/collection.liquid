<div class="row">
{% include 'sidebar' %}
      <div class="span9">
{% paginate collection.products by 8 %}
<div class="page-header">
   <h1>{{ collection.title }}</h1>
</div>
{{ collection.description }}
{% unless collection.description == '' %}
<hr>
{% endunless %}
{% if collection.products.size == 0 %}
No products found in this collection.
{% else %}
{% assign collection = collection.handle %}
    {% include 'product-loop' %}

{% endif %}
{% if paginate.pages > 1 %}

    <div class="pagination pagination-centered">
<ul>
      {% if paginate.previous %}
    <li class="disabled">{{ paginate.previous.title | link_to: paginate.previous.url }}</li>
  {% endif %}
  {% for part in paginate.parts %}
    {% if part.is_link %}
      <li>{{ part.title | link_to: part.url }}</li>
    {% else %}
      <li class="active">{{ part.title | link_to: part.url }}</li>        
    {% endif %}        
  {% endfor %}      
  {% if paginate.next %}
   <li class="next">{{ paginate.next.title | link_to: paginate.next.url }}</li>
  {% endif %}
  </ul>
    </div>
 
{% endif %}
{% endpaginate %}
</div>
</div>
