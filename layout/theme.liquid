{{ 'jquery-1.7.2.min.js' | asset_url | script_tag }}
{{ 'bootstrap.min.js' | asset_url | script_tag }}

{{ 'cloud-zoom.1.0.2.min.js' | asset_url | script_tag }}

  {% unless settings.typekit == "" %}<script type="text/javascript" src="http://use.typekit.com/{{ settings.typekit }}.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>{% endunless %}
<!-- end JS-->
{{ content_for_header }}

{% if template == 'index' %}

{% if settings.shop_tagline != '' %}
<title>{{ shop.name }} | {{ settings.shop_tagline }}</title>{% else %}
<title>{{ shop.name }}</title>{% endif %}
{% elsif customer %}
<title>Customer Account</title>
{% else %}
<title>{{ page_title }} | {{ shop.name }}</title>
{% endif %}
{% assign maxmeta = 155 %}
{% if template contains 'product' %}
<meta name="description" content="{{ product.description | strip_html | strip_newlines | truncate: maxmeta | escape }}" />
{% elsif template contains 'page' %}
<meta name="description" content="{{ page.content | strip_html | strip_newlines | truncate: maxmeta | escape }}" />
{% elsif template == 'index' and shop.description != '' %}
<meta name="description" content="{{ shop.description | strip_html | strip_newlines | truncate: maxmeta | escape}}" />
{% endif %}
{% if template contains 'product' %}
<link rel="canonical" href="{{ shop.url | replace: 'https', 'http' }}{{ product.url }}" />
{% endif %}

</head>

<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a href="#" class="brand">{{ shop.name }}</a>
        
				<div class="nav-collapse">
					<ul class="nav">
						{% for link in linklists.main-menu.links %}
						<li {% if link.active %} class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
						{% endfor %}
					</ul>


					<form class="navbar-search pull-right" action="/search" method="get">
						{% assign col = settings.typeahead_collection %}
						<input id="search-input" name="q" type="text" class="search-query span3" placeholder="Search" data-provide="typeahead" data-source="[{% for product in collections[settings.typeahead_collection].products %}{{ product.title | append: "&quot;" | prepend: "&quot;" }}{% unless forloop.last %},{% endunless %}{% endfor %}]">  
					</form>
 <ul class="nav pull-right">

                		{% if shop.customer_accounts_enabled %}
                          <li class="divider-vertical"></li>
						{% if customer %}
						<li class="dropdown"><a href="#" data-toggle="dropdown" class="dropdown-toggle">
						Welcome {{ customer.first_name }}<b class="caret"></b>
						</a>
    					 
                         <ul class="dropdown-menu">
    						<li><a href="/account">Account</a></li>
							<li>{{ "Logout" | customer_logout_link }}</li>
						</ul>
						</li>
						
						{% else %}
                        
						<li>{{ "Login" | customer_login_link }}</li>
						{% endif %}
                            <li class="divider-vertical"></li>
						{% endif %}
                     
					</ul><!-- /.nav pull-right -->
				</div><!-- /.nav-collapse -->
			</div><!-- /.container-->
		</div><!-- /.navbar-inner -->
	</div><!-- /.navbar-fixed-top -->

	<div class="container">

			<ul class="breadcrumb">
				<li><a href="/" class="homepage-link" title="Back to the frontpage">Home</a><span class="divider">/</span></li>
				{% if template contains "product" %}
				{% if collection %}            
				<li>
					{% if collection.handle %}
					{% capture url %}/collections/{{ collection.handle }}{% endcapture %}
					{{ collection.title | link_to: url }}
					{% elsif collection.all_products_count > 0 and collection.products.first.type == collection.title %}
					{{ collection.title | link_to_type }}
					{% elsif collection.all_products_count > 0 and collection.products.first.vendor == collection.title %}
					{{ collection.title | link_to_vendor }}
					{% endif %}
					<span class="divider">/</span></li>
					{% else %}

					<li>{{ product.type | link_to_type }}<span class="divider">/</span></li>
					{% endif %}
					{% elsif template == "article" %}
					<li>{{ blog.title | link_to: blog.url }}<span class="divider">/</span></li>
					{% endif %}
					<li>{{ page_title }}</li>	
					<ul class="pull-right">
						{% if cart.item_count > 0 %}
						<li><a href="/checkout">Checkout</a><span class="divider">/</span></li>
							{% endif %}
							<li><a href="/cart">Cart ({{ cart.item_count }})</a></li>
						</ul>

					</ul>
                 
					{{ content_for_layout }}
			
				<footer class="footer">
                <hr>
					<p>Copyright &copy; 2012 {{ shop.name }}{% if settings.show_credits %} | Bootstrapify theme by Lucid Design. Powered by Shopify{% endif %}</p>
				</footer>
			</div><!--! end of .container -->

